findXmas : Array2D Char -> Pos -> (Pos -> Pos) -> List Pos
findXmas board xpos move = 
  let
    mpos = move xpos 
    apos = move mpos 
    spos = move apos 
    get (x, y) = Array2D.get y x board
    word = [ get xpos, get mpos, get apos, get spos ] |> List.filterMap identity 
  in
    if word == ['X', 'M', 'A', 'S'] then [ xpos, mpos, apos, spos ] else [] 

findXmasAllAround : Array2D Char -> Pos -> List Pos
findXmasAllAround board pos = 
  let
    nn = findXmas board pos (\(x, y) -> (x, y-1)) 
    nw = findXmas board pos (\(x, y) -> (x-1, y-1))
    ww = findXmas board pos (\(x, y) -> (x-1, y))
    sw = findXmas board pos (\(x, y) -> (x-1, y+1))
    ss = findXmas board pos (\(x, y) -> (x, y+1))
    se = findXmas board pos (\(x, y) -> (x+1, y+1))
    ee = findXmas board pos (\(x, y) -> (x+1, y))
    ne = findXmas board pos (\(x, y) -> (x+1, y-1))
  in
    List.concat [ nn, nw, ww, sw, ss, se, ee, ne ]

getAllPositions : Array2D Char -> List Pos
getAllPositions board = 
  let
    ys = List.range 0 (Array2D.rows board - 1)
    xs = List.range 0 (Array2D.columns board - 1)
  in 
    ys |> List.concatMap (\y -> xs |> List.map (\x -> (x, y)))

updateXmas : Model -> Model
updateXmas model = 
  let
    board = model.board 
    positions = board |> getAllPositions |> List.concatMap (findXmasAllAround board)
    charsPerXmas = 4
    found = (List.length positions) // charsPerXmas
  in
    { model | highlighted = (Set.fromList positions), found = found }

findMasX : Array2D Char -> Pos -> List Pos 
findMasX board (x, y) = 
  let 
    get (xDim, yDim) = Array2D.get yDim xDim board
    nwse = [ get (x-1, y-1), get (x, y), get (x+1, y+1) ] |> List.filterMap identity 
    swne = [ get (x-1, y+1), get (x, y), get (x+1, y-1) ] |> List.filterMap identity 
    isMas word = (word == ['M', 'A', 'S'] || word == ['S', 'A', 'M'])
  in 
    if isMas nwse && isMas swne then 
      [ (x, y), (x-1, y-1), (x+1, y+1), (x-1, y+1), (x+1, y-1) ]
    else 
      []

updateMasX : Model -> Model
updateMasX model = 
  let
    board = model.board 
    positions = board |> getAllPositions |> List.concatMap (findMasX board)
    charsPerMasX = 5
    found = (List.length positions) // charsPerMasX
  in
    { model | highlighted = (Set.fromList positions), found = found }

updateToggleSample : Model -> Model
updateToggleSample model = 
  let
    useSample = not model.useSample
  in
    { model | useSample = useSample, highlighted = Set.empty, found = 0, board = initBoard useSample } 

update : Msg -> Model -> (Model, Cmd Msg)
update msg model =
  case msg of
    Clear -> 
      (updateClear model, Cmd.none)
    Xmas -> 
      (updateXmas model, Cmd.none)
    MasX -> 
      (updateMasX model, Cmd.none)
    ToggleSample -> 
      (updateToggleSample model, Cmd.none)

