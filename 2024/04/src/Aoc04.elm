    case Array2D.get y x model.board of 
      Nothing -> Html.text "?"
      Just ch -> 
        let
          str = String.fromChar ch 
        in
          if Set.member (x, y) model.highlighted then 
            (Html.strong [] [ Html.text str ]) 
          else 
            Html.text str 

